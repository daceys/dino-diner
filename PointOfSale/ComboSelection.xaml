<Page x:Class="PointOfSale.ComboSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ComboSelection">

    <WrapPanel>
        <WrapPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="MinWidth" Value="115"/>
                <Setter Property="MinHeight" Value="110"/>
                <Setter Property="Margin" Value="10"/>
            </Style>            
        </WrapPanel.Resources>
        <Button Click="Customize">Brontowurst Combo</Button>
        <Button Click="Customize">Dino-Nuggets Combo</Button>
        <Button Click="Customize">Prehistoric PB&amp;J Combo</Button>
        <Button Click="Customize">Pterodactyl Wings Combo</Button>
        <Button Click="Customize">Steakosaurus Burger Combo</Button>
        <Button Click="Customize">T-Rex King Burger Combo</Button>
        <Button Click="Customize">Veloci-Wrap Combo</Button>
    </WrapPanel>
</Page>
