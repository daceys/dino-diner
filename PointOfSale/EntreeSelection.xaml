<Page x:Class="PointOfSale.EntreeSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EntreeSelection">

    <WrapPanel>
        <WrapPanel.Resources>
            <Style TargetType="Button">
              <Setter Property="MinWidth" Value="125"/>
              <Setter Property="MinHeight" Value="125"/>
              <Setter Property="Margin" Value="10"/>
          </Style>
        </WrapPanel.Resources>
        <Button Click="OnSelectBrontowurst">Brontowurst</Button>
        <Button Click="OnSelectDinoNuggets">Dino-Nuggets</Button>
        <Button Click="OnSelectPrehistoricPBJ">Prehistoric PB&amp;J</Button>
        <Button Click="OnSelectPterodactylWings">Pterodactyl Wings</Button>
        <Button Click="OnSelectSteakosaurusBurger">Steakosaurus Burger</Button>
        <Button Click="OnSelectTRexKingBurger">T-Rex King Burger</Button>
        <Button Click="OnSelectVelociWrap">Veloci-Wrap</Button>
    </WrapPanel>
</Page>
