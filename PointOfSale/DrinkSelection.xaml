<Page x:Class="PointOfSale.DrinkSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DrinkSelection">

    <WrapPanel>
        <WrapPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="MinWidth" Value="100"/>
                <Setter Property="MinHeight" Value="100"/>
                <Setter Property="Margin" Value="10"/>
            </Style>
        </WrapPanel.Resources>
        <Button>Sodasaurus</Button>
        <Button>Jurassic Java</Button>
        <Button>Tyrannotea</Button>
        <Button>Water</Button>
        <Button>Small</Button>
        <Button>Medium</Button>
        <Button>Large</Button>
        <Button>Sweet/Decaf</Button>
        <Button Click="SelectFlavor">Flavor</Button>
        <Button>Add Lemon</Button>
        <Button>Hold Ice</Button>
    </WrapPanel>
</Page>
